{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "scamnemesis/report",
    "version": "1.0.0",
    "title": "Scamnemesis Report Form",
    "category": "widgets",
    "icon": "flag",
    "description": "Submit fraud reports to Scamnemesis.",
    "keywords": ["report", "fraud", "scam", "scamnemesis", "form"],
    "supports": {
        "html": false,
        "align": ["wide", "full"]
    },
    "textdomain": "scamnemesis",
    "attributes": {
        "title": {
            "type": "string",
            "default": "Report a Scam"
        },
        "showTitle": {
            "type": "boolean",
            "default": true
        },
        "successMessage": {
            "type": "string",
            "default": ""
        }
    },
    "render": "file:./render.php",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.css",
    "style": "file:./style.css"
}
